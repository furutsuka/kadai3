  <div class="row">
    <div class="col-xs-3"> 
              <%= render 'users/userinfo', user: @user %> 
              <%= render 'books/newbook', book: @book %>
    </div>
    <div class="col-xs-9">
           <table class="table table-hover table-inverse">
             <thead>
              <tr>
                 <th></th>
                 <th><h4>Title</h4></th>
                 <th><h4>Opinion</h4></th>
              </tr>
             </thead>
             <% @user.books.each do |book| %>
             <tbody>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img"%></td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
              </tr>
            </tbody>
            <% end %>
      </table>
    </div>
</div>

